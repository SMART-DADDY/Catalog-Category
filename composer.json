{
    "name": "smart-daddy/catalog-category",
    "description": "Category module for SMART-TiLL",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "filament/filament": "^5.0",
        "laravel/framework": "^12.0"
    },
    "autoload": {
        "psr-4": {
            "SmartDaddy\\CatalogCategory\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "App\\": "tests/Fixtures/app/"
        }
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0"
    },
    "scripts": {
        "test": "pest"
    },
    "extra": {
        "laravel": {
            "providers": [
                "SmartDaddy\\CatalogCategory\\CatalogCategoryServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
